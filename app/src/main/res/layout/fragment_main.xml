<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/outer"
    android:orientation="vertical"
    tools:context="com.example.noregrets.MainFragment">


    <Button
        android:id="@+id/setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="settingClick"
        android:text="Settings"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="@id/outer"
        app:layout_constraintTop_toTopOf="@id/outer" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/outer"
        app:layout_constraintTop_toTopOf="@id/outer"
        android:id="@+id/help"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:onClick="helpClick"
        android:text="Help" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/outer"
        app:layout_constraintRight_toRightOf="@id/outer"
        app:layout_constraintTop_toBottomOf="@id/setting"
        app:layout_constraintBottom_toTopOf="@id/begin"
        android:textSize="@android:dimen/app_icon_size"
        android:id="@+id/title"
        android:text="No Regrets" />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/outer"
        app:layout_constraintRight_toRightOf="@id/outer"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toBottomOf="@id/outer"
        android:id="@+id/begin"
        android:onClick="beginClick"
        android:text="Begin" />



</androidx.constraintlayout.widget.ConstraintLayout>