<?xml version="1.0" encoding="utf-8"?>
<!-- Samantha Mathis & Jacob Hurley-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/outer"
    tools:context="com.example.noregrets.QuestionsFragment">

    <TextView
        android:id="@+id/question"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/outer"
        app:layout_constraintRight_toRightOf="@id/outer"
        app:layout_constraintTop_toTopOf="@id/outer"
        app:layout_constraintBottom_toTopOf="@id/answer"
        android:text="Questions" />

    <EditText
        android:id="@+id/answer"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:hint="Answer"
        android:ems="10"
        android:textColor="@color/textColor"
        android:backgroundTint="@color/textColor"
        app:layout_constraintBottom_toTopOf="@id/submit"
        app:layout_constraintLeft_toLeftOf="@id/outer"
        app:layout_constraintRight_toLeftOf="@id/next"
        app:layout_constraintTop_toBottomOf="@id/question" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Next"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@id/submit"
        app:layout_constraintLeft_toRightOf="@id/answer"
        app:layout_constraintRight_toRightOf="@id/outer"
        app:layout_constraintTop_toTopOf="@id/question"/>

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/outer"
        app:layout_constraintRight_toLeftOf="@id/rotate"
        app:layout_constraintTop_toBottomOf="@id/answer"
        app:layout_constraintBottom_toBottomOf="@id/outer"
        android:onClick="submitClick"
        android:text="Submit"/>


    <Button
        android:id="@+id/rotate"
        app:layout_constraintLeft_toRightOf="@id/submit"
        app:layout_constraintRight_toRightOf="@id/outer"
        app:layout_constraintTop_toBottomOf="@id/next"
        app:layout_constraintBottom_toBottomOf="@id/outer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Rotate" />

    <ImageView
        android:id="@+id/timer"
        app:layout_constraintLeft_toRightOf="@id/outer"
        app:layout_constraintRight_toRightOf="@id/outer"
        app:layout_constraintTop_toBottomOf="@id/outer"
        app:layout_constraintBottom_toBottomOf="@id/outer"
        android:layout_width="100dp"
        android:layout_height="100dp" />

</androidx.constraintlayout.widget.ConstraintLayout>