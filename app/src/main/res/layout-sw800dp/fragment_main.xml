<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.noregrets.MainFragment"
    android:id="@+id/outer"
    android:orientation="vertical">


    <Button
        android:id="@+id/setting"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="settingClick"
        android:text="Settings"
        android:textSize="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="@id/outer"
        app:layout_constraintTop_toTopOf="@id/outer" />

    <Button
        android:id="@+id/help"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="helpClick"
        android:text="Help"
        android:textSize="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintRight_toRightOf="@id/outer"
        app:layout_constraintTop_toTopOf="@id/outer" />

    <TextView
        android:id="@+id/title"
        android:layout_width="400dp"
        android:layout_height="90dp"
        android:gravity="center_horizontal"
        android:text="No Regrets"
        android:textAlignment="center"
        android:textSize="70dp"
        app:layout_constraintBottom_toTopOf="@id/begin"
        app:layout_constraintLeft_toLeftOf="@id/outer"
        app:layout_constraintRight_toRightOf="@id/outer"
        app:layout_constraintTop_toBottomOf="@id/setting" />

    <Button
        android:id="@+id/begin"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:onClick="beginClick"
        android:text="Begin"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="@id/outer"
        app:layout_constraintLeft_toLeftOf="@id/outer"
        app:layout_constraintRight_toRightOf="@id/outer"
        app:layout_constraintTop_toBottomOf="@id/title" />


</androidx.constraintlayout.widget.ConstraintLayout>